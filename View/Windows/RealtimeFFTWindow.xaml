<Window x:Class="MusGen.View.Windows.RealtimeFFTWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusGen.View.Windows"
        mc:Ignorable="d"
        Title="Realtime spectrogram" Height="450" Width="800"
		MouseDoubleClick="Window_MouseDoubleClick"
		Closing="Window_Closing"
		Background="Black">
	<Grid>
		<Grid Name="grid">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Name="left"></ColumnDefinition>
				<ColumnDefinition Name="middle"></ColumnDefinition>
				<ColumnDefinition x:Name="right"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Image Name="piano" Grid.Column="1"/>
		</Grid>
		<Image Name="img" Stretch="Fill" />
		<TextBlock Name="fps" Text="60" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Top" HorizontalAlignment="Right" Height="25" Width="60" FontFamily="Consolas" FontSize="20" Foreground="Blue"/>
	</Grid>
</Window>
