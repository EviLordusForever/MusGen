<Window x:Class="MusGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusGen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="798">

	<Grid>
		<Image Name ="image" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"></Image>
		<Grid Margin="20, 50, 20, 50">
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<Button Width="440" Height="70" Margin ="0,15,0,15" Content="Audio Recreation" FontSize="32" Grid.Row="0" Click="Button_Click"></Button>
			<Button Width="440" Height="70" Margin ="0,15,0,15" Content="Realtime FFT (system)" FontSize="32" Grid.Row="1" Click="Button_Click_2"></Button>
			<Button Width="440" Height="70" Margin ="0,15,0,15" Content="Realtime FFT (microphone)" FontSize="32" Grid.Row="2" Click="Button_Click_1"></Button>
		</Grid>
		</Grid>
</Window>
