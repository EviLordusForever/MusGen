<Window x:Class="MusGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusGen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="798">

	<Grid>
		<Image Name ="image" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"></Image>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<Button Width="400" Height="100" Margin ="0,15,0,15" Content="Audio Recreation" FontSize="35" Grid.Row="0" Click="Button_Click"></Button>
			<Button Width="400" Height="100" Margin ="0,15,0,15" Content="Realtime FFT" FontSize="35" Grid.Row="1" Click="Button_Click_1"></Button>
		</Grid>
		</Grid>
</Window>
