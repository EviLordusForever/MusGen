<Window x:Class="MusGen.View.Windows.AudioRecreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusGen.View.Windows"
		xmlns:tbPro="clr-namespace:MusGen.View.Controls" d:DataContext="{d:DesignInstance Type=tbPro:TextBoxPro}"
		mc:Ignorable="d"
        Title="Audio recreation" Height="256" Width="400">
    <Grid Margin="10,10,10,10">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Button Margin="10,10,10,10" Name ="SelBtn"  Content="Select .wav file" FontSize="25" Click="SelBtn_Click"></Button>
		<Button Margin="10,10,10,10" Name ="ProcessBtn"  Content="Process" FontSize="25" Grid.Row="2" Click="ProcessBtn_Click"></Button>
		<tbPro:TextBoxPro Margin="10,10,10,10" VerticalAlignment="Stretch" x:Name ="outNameTb" Placeholder="Out file name" Grid.Row="1"></tbPro:TextBoxPro>
	</Grid>	
</Window>
